@using LibraryManagementSystem.Web.ViewModels
@model CreateBorrowBookViewModel
@{
    ViewData["Title"] = "Return A Book";
}
<h5 class="mt-3 mb-3 text-center">Return A Book</h5>

<div class="container-fluid">
    <form asp-controller="Borrowing" asp-action="Return" method="post">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="bookId" class="form-label">Books</label>
                    <select asp-for="bookId" asp-items="Model.Books" class="form-select" id="bookSelect">
                        <option selected disabled value="">-- Select a book --</option>
                    </select>
                    <span asp-validation-for="bookId" class="form-text text-warning"></span>
                </div>

                <div class="form-group mt-3">
                    <label>Availability Status:</label>
                    <div id="availabilityStatus" class="fw-bold text-danger">Borrowed.</div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg" id="submitButton">Return Book</button>
                </div>

            </div>
        </div>
    </form>
</div>

