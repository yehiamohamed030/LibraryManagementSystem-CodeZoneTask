@using LibraryManagementSystem.Web.ViewModels
@model AuthorViewModel

<h5 class="mt-3 mb-3 text-center">Edit Author</h5>

<div class="container-fluid">
    <form asp-controller="Author" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FullName" class="form-label mt-4">Full Name</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Full Name" autocomplete="off">
                    <span asp-validation-for="FullName" class="form-text text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label mt-4">Email address</label>
                    <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
                    <span asp-validation-for="Email" class="form-text text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Website" class="form-label mt-4">Website</label>
                    <input type="text" class="form-control" asp-for="Website" placeholder="Website" autocomplete="off">
                    <span asp-validation-for="Website" class="form-text text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="form-label mt-4">Bio</label>
                    <input type="text" class="form-control" asp-for="Bio" placeholder="Bio" autocomplete="off">
                    <span asp-validation-for="Bio" class="form-text text-warning"></span>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Edit Author</button>
                </div>
            </div>
        </div>
    </form>
</div>
